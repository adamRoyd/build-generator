@charset "utf-8";


html
{
    -webkit-text-size-adjust: none; /* Prevent font scaling in landscape */
}


/* ui elements */
*
{
	margin:0;
	padding:0;
    font-family:Arial;
}

body
{
	font-family:Arial;
	color:#565656;
}

p,li
{
	font-family: Arial;
	font-size:20px;
	color:#333333;
}

p,ul,ol
{
	margin-bottom: 0.6em;
}

.feedback p:last-of-type{
	margin-bottom: 0;
}

.button  p
{
	color: #FFFFFF;
  text-align: center;
	margin-bottom: 0;
}

.menuTopicBtn{
	text-align: left;
	font-weight: bold;
	line-height: 1em;
}

.title{
	margin: 0.5em 0;
	text-align: left;
	font-size:25px;
	font-weight:bold;
}

.courseTitle{
	font-size:35px;
	font-weight:bold;
}

.topicTitle{
	font-weight:bold;
	text-align: left;
	width: 100%;
	margin-bottom: 0;
}

.menuTitle{
	font-size:30px;
	font-weight:bold;
}

.menusubtitle{
	text-align: left;
	font-size:35px;
	color:#0f2b70;
}

.scoreHeading{
	text-align: left;
	font-size:30px;
	color:#405d17;
	font-weight:bold;
}

ul, ol{
	list-style-position:inherit;
}

ul li{
	margin-left:15px;
}

ol li{
	margin-left:24px;
}


li{
	color:#565656;
}
.prompt{
	color:#00b5ae;
}

.menuprompt{
	color:#0f2b70;
}

.mcq_option p{
	color:#FFFFFF;
	cursor:default;
	font-weight:bold;
	margin-bottom: 0 !important;
}

.sliderOption{
	color:#00b5ae;
	cursor:default;
	font-weight:bold;
	text-align: center;
	padding-bottom:50px !important;
}
.dragOption{
	color:#ffffff;
	text-align: center;
}


a{
	text-decoration:underline;
    color: inherit;
}

.textReveal
{
	color:#FFFFFF;
}

.correct
{
	color:#FFFFFF;
}
.incorrect
{
	color:#FFFFFF;
}


div.navBtnDiv p{
	text-align:center;
	color: #FFFFFF;
	font-size:14px;
}

.pagecounter p{
	color : #333333;
	font-size: 20px;
	font-weight:bold;
	text-align: center;
}
